<div class="container" >

  <%= render 'navbar'%>

  <h1>Cocktails#show</h1>

  <h2> <%= @cocktail.name %> </h2>
  <br>

  <ol>
    <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.ingredient.name %> - <%= dose.description %> </li>
    <% end %>
  </ol>

  <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>

</div>
